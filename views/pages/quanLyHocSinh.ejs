<style>
    .tab-buttons {
        display: flex;
        gap: 8px;
        margin-bottom: 16px;
    }

    .tab-button {
        padding: 8px 16px;
        background-color: #e5e7eb;
        /* Tailwind gray-200 */
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.2s;
    }

    .tab-button.active {
        background-color: #3b82f6;
        /* Tailwind blue-500 */
        color: white;
    }

    .tab-pane {
        display: none;
    }

    .tab-pane.active {
        display: block;
    }

    #parentSuggestions {
        max-height: 192px;
        /* max-h-48 */
        overflow-y: auto;
