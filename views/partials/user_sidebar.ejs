<aside class="bg-[#1e2a47] w-16 sm:w-64 flex flex-col text-white">
   <div class="flex items-center justify-center sm:justify-start gap-2 px-4 py-4 border-b border-[#2c3a6a]">
      <div class="bg-[#3a5ca8] rounded-md p-2">
         <img alt="User icon with white silhouette on blue background" class="w-8 h-8" height="32"
            src="https://storage.googleapis.com/a1aa/image/8c121712-e1eb-449f-a9f3-9207173011f2.jpg" width="32" />
      </div>
      <span class="hidden sm:block font-semibold text-lg select-none">
         <%= taiKhoan.ten_vai_tro %>
      </span>
      <button aria-label="Toggle menu" class="sm:hidden ml-auto text-white text-xl focus:outline-none">
         <i class="fas fa-bars">
         </i>
      </button>
   </div>
   <nav class="flex flex-col mt-2 space-y-1 px-2 sm:px-4 text-sm font-medium select-none">
<% const menuItems = {
         'Giáo viên': [
            { href: '/lop-hoc', icon: 'users', text: 'Quản lý lớp học' },
            { href: '/hoc-sinh', icon: 'user-graduate', text: 'Quản lý học sinh' },
            { href: '/phu-huynh', icon: 'user-tie', text: 'Quản lý phụ huynh' },
            { href: '/thuc-hien-diem-danh', icon: 'calendar', text: 'Thực hiện điểm danh' },
            { href: '/diem-danh', icon: 'check-square', text: 'Quản lý điểm danh' },
         ],
         'Phụ huynh': [
            { href: '/hoc-sinh', icon: 'user-graduate', text: 'Quản lý học sinh' },
            { href: '/giao-vien', icon: 'chalkboard-teacher', text: 'Quản lý giáo viên' },
            { href: '/diem-danh', icon: 'check-square', text: 'Quản lý điểm danh' },
         ],
         'Hiệu trưởng': [
            { href: '/dashboard', icon: 'tachometer-alt', text: 'Tổng quan' },
            { href: '/lop-hoc', icon: 'users', text: 'Quản lý lớp học' },
            { href: '/giao-vien', icon: 'chalkboard-teacher', text: 'Quản lý giáo viên' },
            { href: '/hoc-sinh', icon: 'user-graduate', text: 'Quản lý học sinh' },
            { href: '/phu-huynh', icon: 'user-tie', text: 'Quản lý phụ huynh' },
            { href: '/diem-danh', icon: 'check-square', text: 'Quản lý điểm danh' },
            { href: '/bao-cao', icon: 'chart-line', text: 'Báo cáo tình trạng' }
         ]
      }; %>
      <% const allowedMenu = menuItems[taiKhoan.ten_vai_tro] || []; %>
      <% allowedMenu.forEach(item => { %>
         <a class="flex items-center gap-3 py-3 px-2 rounded-md hover:bg-[#2c3a6a] hover:text-[#3ad597] transition-colors"
            href="<%= item.href %>">
            <i class="fas fa-<%= item.icon %> text-lg"></i>
            <span class="hidden sm:inline"><%= item.text %></span>
         </a>
      <% }); %>   </nav>
</aside>