<div class="container mx-auto p-4">
    <!-- Table: HỌC SINH VẮNG NHIỀU -->
    <div class="bg-white p-4 shadow rounded-lg">
        <h2 class="text-xl font-bold mb-4 text-center">HỌC SINH VẮNG NHIỀU</h2>
        <table class="w-full border-collapse border border-gray-300">
            <thead>
                <tr class="bg-gray-200">
                    <th class="border border-gray-300 p-2">STT</th>
                    <th class="border border-gray-300 p-2">Tên Học Sinh</th>
                    <th class="border border-gray-300 p-2">Tên Lớp</th>
                    <th class="border border-gray-300 p-2">Tỉ Lệ Vắng (%)</th>
                </tr>
            </thead>
            <tbody>
                <% if (danhSachHocSinhVangNhieu && danhSachHocSinhVangNhieu.length> 0) { %>
                    <% danhSachHocSinhVangNhieu.forEach((hs, index)=> { %>
                        <tr>
                            <td class="border border-gray-300 p-2 text-center">
                                <%= index + 1 %>
                            </td>
                            <td class="border border-gray-300 p-2">
                                <%= hs.ten_hoc_sinh %>
                            </td>
                            <td class="border border-gray-300 p-2">
                                <%= hs.ten_lop %>
                            </td>
                            <td class="border border-gray-300 p-2">
                                <div
                                    class="relative w-full bg-gray-200 rounded-full h-6 transition-all duration-300 hover:shadow-lg hover:bg-gray-300">
                                    <div class="bg-red-500 h-6 rounded-full text-white text-center text-sm flex items-center justify-center"
                                        style="width: <%= hs.ti_le_vang %>%;">
                                        <%= hs.ti_le_vang %>%
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="4" class="text-center text-gray-500 py-4">Không có dữ liệu.</td>
                                </tr>
                                <% } %>
            </tbody>

        </table>
    </div>
</div>