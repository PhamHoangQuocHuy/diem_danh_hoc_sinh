<style>
    .message-box {
        padding: 10px;
        margin-bottom: 15px;
        border-radius: 5px;
        font-size: 25px;
        border: 1px solid transparent;
    }

    .message-success {
        background-color: #d4edda;
        color: #155724;
        border-color: #c3e6cb;
    }

    .message-error {
        background-color: #f8d7da;
        color: #721c24;
        border-color: #f5c6cb;
    }

    .tag-container {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-top: 0.5rem;
    }

    .tag {
        background-color: #e2e8f0;
        padding: 0.25rem 0.5rem;
        border-radius: 0.25rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .tag-remove {
        cursor: pointer;
        color: #718096;
    }

    .tag-remove:hover {
        color: #e53e3e;
    }

    .modal-hidden {
        display: none;
    }
</style>
