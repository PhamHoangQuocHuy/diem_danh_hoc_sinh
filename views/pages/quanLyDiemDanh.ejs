<section class="flex-1 overflow-auto p-4">
      <!-- LỌC -->
      <div class="flex flex-wrap items-center gap-2 border border-[#3ad597] rounded px-3 py-1 mb-4 select-none max-w-full"
            style="max-width: 395px;">
            <!-- Dropdown chọn lớp -->
            <select id="classSelect"
                  class="border border-gray-300 rounded px-2 py-1 text-sm focus:outline-none focus:ring-1 focus:ring-[#3ad597]">
                  <option value="" selected disabled>Chọn lớp</option>
                  <option value="">Lớp 1A1</option>
            </select>

            <!-- Month Picker -->
            <input type="month" id="monthPicker"
                  class="border border-gray-300 rounded px-2 py-1 text-sm focus:outline-none focus:ring-1 focus:ring-[#3ad597]"
                  value="<%= currentYear %>-<%= currentMonth.toString().padStart(2, '0') %>">

            <!-- Nút xem -->
            <button onclick="loadAttendance()" style="width: 80px;"
                  class="bg-[#3ad597] hover:bg-[#2ebc7d] text-white rounded px-3 py-1 text-sm font-semibold">
                  Xem
            </button>
      </div>

      <div class="overflow-x-auto scrollbar-thin">
            <table class="min-w-full border border-gray-200 rounded-md text-xs text-left" id="attendanceTable">
                  <thead class="bg-white border-b border-gray-200 text-gray-600 select-none">
                        <tr>
                              <th class="w-10 px-3 py-2 border-r border-gray-200 font-semibold">STT</th>
                              <th class="min-w-[160px] px-3 py-2 border-r border-gray-200 font-semibold">Họ tên</th>
                              <th class="w-28 px-3 py-2 border-r border-gray-200 font-semibold">Ngày sinh</th>
                              <th class="w-20 px-3 py-2 border-r border-gray-200 font-semibold text-center">Tổng có mặt
                              </th>
                              <th class="w-20 px-3 py-2 border-r border-gray-200 font-semibold text-center ">Tổng vắng
                              </th>

                              <!-- Các cột ngày trong tháng -->
                              <% for(let day=1; day <=daysInMonth; day++) { %>
                                    <th class="w-8 px-1 py-2 border-r border-gray-200 font-semibold text-center">
                                          <%= day %>
                                    </th>
                                    <% } %>
                        </tr>
                  </thead>

                  <tbody class="text-gray-600">

                        <tr class="bg-white border-b border-gray-100 hover:bg-[#f8fafc]">
                              <td class="px-3 py-2 border-r border-gray-200 text-center">
                                    1
                              </td>
                              <td class="px-3 py-2 border-r border-gray-200">
                                    A
                              </td>
                              <td class="px-3 py-2 border-r border-gray-200 text-center">
                                    1/1/2020
                              </td>
                              <td class="px-3 py-2 border-r border-gray-200 text-center">
                                    0
                              </td>
                              <td class="px-3 py-2 border-r border-gray-200 text-center">
                                    0
                              </td>

                              <!-- Các ô điểm danh từng ngày -->
                              <% for(let day=1; day <=daysInMonth; day++) { %>
                                    <td class="px-1 py-2 border-r border-gray-200 text-center">
                                          ?
                                    </td>
                                    <% } %>
                        </tr>

                  </tbody>
            </table>
      </div>
</section>



<!-- FORMAT DATE -->
<% function formatDate(dateStr) { if (!dateStr) return '' ; const d=new Date(dateStr); const
      day=String(d.getDate()).padStart(2, '0' ); const month=String(d.getMonth() + 1).padStart(2, '0' ); const
      year=d.getFullYear(); return `${day}/${month}/${year}`; } %>